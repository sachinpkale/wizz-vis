<% breadcrumb :dashboards %>
<%= content_for :search_bar do %>
  <div class='center col m7 s8 l6'>
    <%= form_tag(dashboards_path, method: :get, remote: true) do %>
      <div class='input-field col s12'>
        <i class='material-icons prefix'>search</i>
        <input type='text' name='search' placeholder='Search' />
      </div>
    <% end %>
  </div>
<% end %>
<%= content_for :breadcrumb_class do %>
  hide-on-small-only
<% end %>
<%= content_for :row_class do %>
  col l3 m5 s2
<% end %>
<div class="container">
  <div class="card">
    <div class="card-title">Dashboards
      <%= link_to new_dashboard_path, class: "btn-floating btn-large halfway-fab waves-effect waves-light primary-color" do -%>
        <%= material_icon.add %>
      <% end -%>
    </div>
    <div class="card-content">
      <table class="bordered">
        <thead>
          <tr>
            <th>Name</th>
            <th>Created At</th>
            <th>Updated At</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <%= render @dashboards %>
        </tbody>
      </table>
      <%= render partial: 'pagination', locals: { dashboards: @dashboards } %>
    </div>
  </div>
</div>
