#login-form {
  display: inline-block;
  padding: 25px;
  border: 1px solid #EEE;
}

body.login {
  background-size: contain;
  background-position: bottom center;
  background-image: url(<%= asset_path 'divider-powered.png' %>), linear-gradient(120deg,#f68d2e 0%,#ffc72d 100%)!important;
  background-repeat: no-repeat;
  height: -webkit-fill-available;

  .col.l6.m12.s12 {
    margin-top: 10%;
  }
}
